<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="main">
	<ActionBar title="Birthday Reminder">
	</ActionBar>
    <StackLayout verticalAlignment="center" id="canvas">
    	<Label text="{{text}}" textWrap="true" id="welcome-text" />	
        <TextField id="username" hint="Username" />
        <TextField id="password" hint="Password" secure="true" />
        <Button id="logInButton" text="Log In" class="btn-main"/>
        <Button id="registerButton" text="Register" class="btn-main"/>
        <Label id="label"/>
    </StackLayout>
</Page>
