<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <StackLayout>
        <Button text="Add item" id="addFriendButton"/>
        <ListView items="{{items}}" id="friendsList">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{firstname || 'Downloading...' }}"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>