<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <ScrollView>
    <StackLayout>
        <TextField id="username" hint="Username (5-10)"/>
        <TextField id="password" hint="Password (5-10)"/>
        <TextField id="confirmPassword" hint="Confirm Password (5-10)"/>
        <TextField id="firstname" hint="First Name (2-10)" />
        <TextField id="lastname" hint="Last Name (2-10)" />
        <TextField id="email" hint="Email" />
        <Label text="Birthday"/>
        <DatePicker id="birthday"/>
        <Button id="takePictureButton" text="Take Picture"/>
        <Image id="picture" stretch="none" horizontalAlignment="center"/>
        <Button id="registerButton" text="Register"/>
        <Label id="label"/>
    </StackLayout>
    </ScrollView>
</Page>