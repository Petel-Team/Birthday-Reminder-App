<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <ScrollView>
        <StackLayout>
            <Image src="https://cdn2.iconfinder.com/data/icons/social-flat-buttons-3/512/anonymous-512.png"
                   stretch="none" horizontalAlignment="center" id="userpicture"/>
            <Button text="pick a picture" tap="" class="profile-btn" id="takePictureButton"/>

            <GridLayout rows="40, 40, 40, 40, 40" columns="*, *" horizontalAlignment="center">
                <Label text="Username:" row="0" col="0"/>
                <Label id="username" text="johnny_d" row="0" col="1"/>

                <Label text="First Name:" row="1" col="0"/>
                <Label id="firstname" text="John" row="1" col="1"/>

                <Label text="Last Name:" row="2" col="0"/>
                <Label id="lastname" text="Doe" row="2" col="1"/>

                <Label text="E-mail:" row="3" col="0"/>
                <Label id="email" text="john.doe@domain.com" row="3" col="1"/>

                <Label text="Birthday:" row="4" col="0"/>
                <Label id="birthday" text="01.01.1990" row="4" col="1"/>
            </GridLayout>
            <Button id="changeBirthDay" text="Change Birthday" class="profile-btn"/>
            <Button text="View Friends" id="viewFriendsButton" class="profile-btn"/>
            <Button text="Maps" id="goToMapsButton" class="profile-btn"/>
            <Button text="logout" tap="" class="profile-btn"/>
        </StackLayout>
    </ScrollView>
</Page>