<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="main">
    <StackLayout verticalAlignment="center">
    	<Label text="{{text}}" textWrap="true" id="welcome-text" />
    	
        <TextField id="username" hint="Username" />
        <TextField id="password" hint="Password" />
        <Button id="logInButton" text="Log In" />
        <Button id="registerButton" text="Register" />
        <Label id="label"/>
    </StackLayout>
</Page>
