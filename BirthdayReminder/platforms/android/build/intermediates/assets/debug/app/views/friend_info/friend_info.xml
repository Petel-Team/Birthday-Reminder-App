<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <ScrollView>
        <StackLayout id="container" verticalAlignment="top">
            <Button text="&#xf1f8;" class="editBtn btn-delete" id="deleteFriendButton" />
            <Image src="" stretch="aspectFit" horizontalAlignment="center" id="userpicture"/>
            <Button text="change photo" tap="" class="btn-fr-profile" id="takePictureButton" />
            <GridLayout rows="40, 40, 40, 40" columns="*, *" horizontalAlignment="center" id="gridContainer">
                <Label text="First Name:" row="0" col="0" />
                <Label id="firstname" text="John" row="0" col="1" />
                <Label text="Last Name:" row="1" col="0" />
                <Label id="lastname" text="Doe" row="1" col="1" />
                <Label text="Birthday:" row="2" col="0" />
                <Label id="birthday" text="01.01.1990" row="2" col="1" />
                <Label text="Ideas:" row="3" col="0" />
                <Label id="ideas" text="Ideas" row="3" col="1" />
            </GridLayout>
        </StackLayout>
    </ScrollView>
</Page>
