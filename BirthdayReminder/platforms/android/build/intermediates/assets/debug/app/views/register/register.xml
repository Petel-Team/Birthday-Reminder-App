<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="pg-main">
    <ScrollView>
    <StackLayout verticalAlignment="center">
        <TextField id="username" hint="Username (5-10)" class="lbl-log"/>
        <TextField id="password" hint="Password (5-10)" secure="true" class="lbl-log"/>
        <TextField id="confirmPassword" hint="Confirm Password (5-10)" secure="true" class="lbl-log"/>
        <TextField id="firstname" hint="First Name (2-10)" class="lbl-log"/>
        <TextField id="lastname" hint="Last Name (2-10)" class="lbl-log"/>
        <TextField id="email" hint="Email" class="lbl-log"/>
        <Button id="registerButton" text="Register" class="btn-main op"/>
    </StackLayout>
    </ScrollView>
</Page>